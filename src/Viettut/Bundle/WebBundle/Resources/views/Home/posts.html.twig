                                 <div class="img-thumbnail">
                                     <img class="img-responsive" src="{{ post.thumbnail }}" alt="">
                                 </div>
                             </div>

                             <div class="post-date">
                                 <span class="day">{{ post.createdAt | date('d') }}</span>
                                 <span class="month">{{ post.createdAt | date('M') }}</span>
                             </div>

                             <div class="post-content">

                                 <h2><a href="{{ path('single_post_page', {hash: post.hash}) }}">{{ post.title }}</a></h2>
                                 <p>{{ post.summary | raw }}</p>

                                 <div class="post-meta">
                                     <span><i class="fa fa-user"></i> By <a href="#">{{ post.author.username }}</a> </span>
                                     <span><i class="fa fa-tag"></i> <a href="#">Duis</a>, <a href="#">News</a> </span>
                                     <span><i class="fa fa-comments"></i> <a href="#">12 Comments</a></span>
