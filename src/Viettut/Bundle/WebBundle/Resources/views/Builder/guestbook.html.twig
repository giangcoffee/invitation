{% if app.user %}
    <div class="popup_wrap popup_write" id="popup_login">
        <div class="popup_box">
            <div class="pop_title color_bg">Chúc mừng</div>
            <div class="pop_write">
                <div class="profile_area">
                    <div class="profile_img">
