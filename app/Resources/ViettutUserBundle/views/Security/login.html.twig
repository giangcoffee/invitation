{% extends 'base.html.twig' %}
{% block main %}
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
    <div class="container">
        <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Đăng Nhập</div>
                    <div class="text-right-top"><a href="{{ path('fos_user_resetting_request') }}">Quên mật khẩu?</a></div>
                </div>

                <div style="padding-top:30px" class="panel-body" >

                    {% if error %}
                        <div class="alert alert-danger col-sm-12">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-md-1">&nbsp;</div>
                        <div class="col-md-10">
                            <div class="social-buttons">
                                <a href="{{ facebookUrl }}" class="btn btn-primary btn-fb"><span>Đăng Nhập Facebook</span></a>
                                <a href="{{ zaloUrl }}" class="btn btn-primary btn-zl"><span>Đăng Nhập Zalo</span></a>
                            </div>
                            <div class="social-login">
                                <a href="{{ facebookUrl }}" class="btn btn-fb" title="Đăng nhập Facebook"><img src="{{ asset('bundles/viettutweb/img/logos/facebook_circle_icon.png') }}" alt="facebook icon" /></a>
                                <a href="{{ zaloUrl }}" class="btn btn-zl" title="Đăng nhập Zalo"><img src="{{ asset('bundles/viettutweb/img/logos/zalo_cicle_icon.png') }}" alt="facebook icon" /></a>
                            </div>
                        </div>
                        <div class="col-md-1">&nbsp;</div>
                    </div>
                    <hr class="tall"/>
                    <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username hoặc email">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input class="form-control" type="password" id="password" name="_password" placeholder="mật khẩu" required="required"/>
                        </div>

                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="remember" checked="checked"> Nhớ thông tin
                                </label>
                            </div>
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <div class="col-sm-4">&nbsp;</div>
                            <div class="col-sm-4 controls button-center">
                                <input class="btn btn-lg btn-primary" type="submit" id="_submit" name="_submit" value="Đăng Nhập" />
                            </div>
                            <div class="col-sm-4">&nbsp;</div>
                        </div>
                    </form>
                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Chưa có tài khoản ?
                                <a href="{{ path('fos_user_registration_register') }}">
                                    Đăng ký
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}