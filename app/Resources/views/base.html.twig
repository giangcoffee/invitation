<body>
<div class="body">
    <header id="header">
        <div class="container">
            <div class="logo">
                <a href="{{ path('home_page') }}">
                    <img alt="Porto" width="111" height="54" data-sticky-width="82" data-sticky-height="40" src="{{ asset('bundles/viettutweb/img/logo1_default.png') }}">
                </a>
            </div>
            <div class="search">
                <form id="searchForm" action="page-search-results.html" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control search" name="q" id="q" placeholder="Tìm kiếm..." required>
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
            </div>
            <nav>
                <ul class="nav nav-pills nav-top">
                    <li>
                        <a href="contact-us.html"><i class="fa fa-angle-right"></i>Góp Ý</a>
                    </li>
                    <li class="phone">
                        <span><i class="fa fa-phone"></i>0961614387</span>
                    </li>
                </ul>
            </nav>
            <button class="btn btn-responsive-nav btn-inverse" data-toggle="collapse" data-target=".nav-main-collapse">
                <i class="fa fa-bars"></i>
            </button>
        </div>
        <div class="navbar-collapse nav-main-collapse collapse">
            <div class="container">
                <ul class="social-icons">
                    <li class="facebook"><a href="http://www.facebook.com/" target="_blank" title="Facebook">Facebook</a></li>
                    <li class="twitter"><a href="http://www.twitter.com/" target="_blank" title="Twitter">Twitter</a></li>
                    <li class="linkedin"><a href="http://www.linkedin.com/" target="_blank" title="Linkedin">Linkedin</a></li>
                </ul>
                <nav class="nav-main mega-menu">
                    <ul class="nav nav-pills nav-main" id="mainMenu">
                        {% if app.user %}
                            <li>
                                <a class="dropdown-toggle" href="#">
                                    Thiết Kế
                                </a>
                            </li>
                        {% endif %}

                        <li class="dropdown{{ (app.request.attributes.get('_route') == 'templates_page') ? ' active' }}">
                            <a class="dropdown-toggle" href="{{ path('templates_page') }}">
                                Mẫu Thiệp
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('templates_page') }}">Danh sách mẫu thiệp</a></li>
                                {% if app.user %}
                                    <li><a href="index-1.html">Thêm mẫu thiệp <span class="tip">hot</span></a></li>
                                {% endif %}
                            </ul>
                        </li>

                        <li  {{ (app.request.attributes.get('_route') == 'about_page') ? ' class="active"' }}>
                            <a class="dropdown-toggle" href="{{ path('about_page') }}">
                                Giới thiệu
                            </a>
                        </li>

                        <li {{ (app.request.attributes.get('_route') == 'services_page') ? ' class="active"' }}>
                            <a class="dropdown-toggle" href="{{ path('services_page') }}">
                                Dịch vụ
                            </a>
                        </li>

                        <li {{ (app.request.attributes.get('_route') == 'price_page') ? ' class="active"' }}>
                            <a class="dropdown-toggle" href="{{ path('price_page') }}">
                                Bảng giá
                            </a>
                        </li>

                        <li {{ (app.request.attributes.get('_route') == 'contact_page') ? ' class="active"' }}>
                            <a class="dropdown-toggle" href="{{ path('contact_page') }}">
                                Liên Hệ
                            </a>
                        </li>

                        {% if app.user %}
                            <li class="dropdown mega-menu-item mega-menu-signin signin logged" id="headerAccount">
                                <a class="dropdown-toggle" href="#">
                                    <i class="fa fa-user"></i> {{ app.user.username }}
                                    <i class="fa fa-angle-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <div class="mega-menu-content">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <div class="user-avatar">
                                                        <div class="img-thumbnail">
                                                            <img alt="avatar" src="{{ app.user.avatar }}">
                                                        </div>
                                                        <p>
                                                            <strong>{{ app.user.username }}</strong>
                                                            <span>{{ app.user.professional }}</span>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <ul class="list-account-options">
                                                        <li>
                                                            <a href="#">Profile</a>
                                                        </li>
                                                        <li>
                                                            <a href="{{ path('fos_user_security_logout') }}">Log Out</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li>
                                <a class="dropdown-toggle" href="{{ path('fos_user_security_login') }}">
                                    <i class="fa fa-user"></i> Đăng Nhập
                                </a>
                            </li>
                        {% endif %}
                        {% block cart %}
                        {% endblock %}
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div role="main" class="main {% block shop %}{% endblock %}">
        {% block main %}
        {% endblock %}
    </div>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="footer-ribbon">
                    <span>Liên hệ</span>
                </div>
                <div class="col-md-3">
                    <div class="newsletter">
                        <h4>Nhận tin mới</h4>
                        <p>Đăng ký để nhận những mẫu thiệp mới nhất qua email</p>
                        <form name="subscribeForm" id="subscribeForm">
                            <div class="input-group">
                                <input class="form-control" placeholder="email" type="email" name="email" ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/" required>
                                <span class="input-group-btn">
                                    <button id="subscribeButton" class="btn btn-default" onclick="subscribe()" data-loading-text="<i class='fa fa-spinner fa-spin'></i>" type="button">Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-3">
                    <h4>Blog mới nhất</h4>
                    <div id="tweet" class="twitter" data-plugin-tweets data-plugin-options='{"username": "", "count": 2}'>
                        <p>Đang load ...</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-details">
                        <h4>Góp ý</h4>
                        <ul class="contact">
                            <li><p><i class="fa fa-map-marker"></i> <strong>Address:</strong> 1234 Street Name, City Name, United States</p></li>
                            <li><p><i class="fa fa-phone"></i> <strong>Phone:</strong> 0961614387</p></li>
                            <li><p><i class="fa fa-envelope"></i> <strong>Email:</strong> <a href="mailto:support@thiepdo.com">support@thiepdo.com</a></p></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <ul class="social-icons">
                            <li class="facebook"><a href="http://www.facebook.com/" target="_blank" data-placement="bottom" data-tooltip title="Facebook">Facebook</a></li>
                            <li class="twitter"><a href="http://www.twitter.com/" target="_blank" data-placement="bottom" data-tooltip title="Twitter">Twitter</a></li>
                            <li class="linkedin"><a href="http://www.linkedin.com/" target="_blank" data-placement="bottom" data-tooltip title="Linkedin">Linkedin</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-1">
                        <a href="{{ path('home_page') }}" class="logo">
                            <img alt="Porto Website Template" class="img-responsive" src="{{ asset('bundles/viettutweb/img/logo1_gray.png') }}">
                        </a>
                    </div>
                    <div class="col-md-7">
                        <p>© Copyright 2017. All Rights Reserved.</p>
                    </div>
                    <div class="col-md-4">
                        <nav id="sub-menu">
                            <ul>
                                <li><a href="{{ path('faq_page') }}">Hỏi đáp</a></li>
                                <li><a href="sitemap.html">Sitemap</a></li>
                                <li><a href="{{ path('contact_page') }}">Góp ý</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

