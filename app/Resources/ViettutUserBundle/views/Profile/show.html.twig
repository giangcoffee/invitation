{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block main %}
    <section class="page-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="active">Profile</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ app.user.username }}</h1>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="img-thumbnail">
                    <a href="#">
                        <img src="{{ app.user.avatar }}" alt="user avatar">
                    </a>
                </div>
            </div>
            <div class="col-md-10">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Thông tin</div>
                    </div>
                    <div class="panel-body" >
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">{{ 'profile.show.username'|trans }}</label>
                                <div class="col-md-8">
                                    <span class="form-control">{{ user.username }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">{{ 'profile.show.email'|trans }}</label>
                                <div class="col-md-8">
                                    <span class="form-control">{{ user.email }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">Họ Tên</label>
                                <div class="col-md-8">
                                    <span class="form-control">{{ user.name }}</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">Nghề nghiệp</label>
                                <div class="col-md-8">
                                    <span class="form-control">{{ user.professional }}</span>
                                </div>
                            </div>
                        </form>
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div class="bottom-hint" >
                                    <a href="{{ path('fos_user_change_password') }}">
                                        Đổi mật khẩu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
