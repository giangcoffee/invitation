                <a href="sms:{{ data['groom_phone'] }}" title="Nhắn tin">
                    <li class="ico6">Nhắn tin</li>
                </a>
                <a href="http://facebook.com/dalpeng" target="_blank" title="Facebook">
                    <li class="ico7">Facebook</li>
