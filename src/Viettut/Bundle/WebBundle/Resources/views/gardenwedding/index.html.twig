<div data-role="page" id="skin_page">
    <!-- panel-groom -->
    <div data-role="panel" id="panel_groom" class="leftpanel" data-position="left" data-display="push"
         data-position-fixed="true" data-swipe-close="true" data-theme="b"
         style="background:#fff url('/bundles/viettutweb/img/templates/gardenwedding/bg_groom.jpg') center top no-repeat; background-size:100%; z-index:9999;">
        <div class="groom-wrap">
            <ul>
                <a href="tel:{{ data['groom_phone'] }}" title="Gọi điện">
