                itemSelector: '.gal_frame',
                columnWidth: '.gal_size',
                transitionDuration: '0.2s',
                percentPosition: true
            });

            $('#div_gallery').masonry({itemSelector: '.gallery_sections'});
        });

        //-->
    </script>
