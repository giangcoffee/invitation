                            <span class="day">{{ post.createdAt | date('d') }}</span>
                            <span class="month">{{ post.createdAt | date('l') }}</span>
                        </div>
                        <div class="post-content">
                            <h2><a href="#">{{ post.title }}</a></h2>
                            <div class="post-meta">
                                <span><i class="fa fa-user"></i> By <a href="#">{{ post.author.name }}</a> </span>
                                <span><i class="fa fa-tag"></i> <a href="#">Blog</a>, <a href="#">News</a> </span>
                            </div>
                            <p>{{ post.content }}</p>
                        </div>
                    </article>
                </div>
            </div>
